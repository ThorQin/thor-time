{
	"name": "thor-time",
	"version": "1.1.1",
	"description": "A simple date time helper toolkit.",
	"repository": {
		"url": "https://gitee.com/thor.qin/thor-time.git"
	},
	"main": "./dist/cjs/index.js",
	"exports": "./dist/esm/index.mjs",
	"keywords": [
		"data",
		"time"
	],
	"author": "thor.qin@outlook.com",
	"license": "MIT",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.33.0",
		"@typescript-eslint/parser": "^2.33.0",
		"eslint": "^7.0.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"prettier": "^2.0.5",
		"renamer": "^2.0.1",
		"typescript": "^3.9.3"
	},
	"scripts": {
		"build-esm": "tsc --outDir ./dist/esm  -P tsconfig.json && renamer --find js --replace mjs \"./dist/esm/**\"",
		"build-cjs": "tsc --module commonjs --outDir ./dist/cjs -P tsconfig.json",
		"build": "rm -rf ./dist/* && npm run build-esm && npm run build-cjs",
		"postbuild": "prettier --write ./dist"
	}
}
